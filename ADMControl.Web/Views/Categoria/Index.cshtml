@model ADMControl.Web.Models.CategoriaViewModel
@{
}

<div id="divModalCadastro">
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="row mb-2" style="height:30px">
                    <div class="col-6 d-flex justify-content-start align-content-center">
                        <h3 class="mt-3 ml-3">Categorias</h3>
                    </div>
                    <div class="col-6 d-flex justify-content-end">
                        <div class=" d-flex justify-content-end align-content-center w-100">
                            
                        <button type="button" class="btn  btn-success btn-sm w-50 h-75 m-2" onclick="AbreCadastro()">Adicionar Categoria</button>
                            @*<button type="button" class="btn  btn-primary btn-flat mx-1 w-35" style="height:50px" onclick="AbreCadastro()">Adicionar Categoria</button>*@
                        </div>
                        @*<button type="button" class="btn btn-block btn-primary w-50 btn-lg mb-3" onclick="AbreCadastro()">Adicionar Categoria</button>*@

                    </div>
                </div>
                <div class="card-body">
                    <div id="divListCategoria">
                        @await Html.PartialAsync("PartialListaDatatable", Model.Categorias)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/Categoria.js"></script>
}